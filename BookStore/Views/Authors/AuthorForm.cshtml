@using BookStore.ViewModel
@model AuthorFormVM
@section Title { Books }
@section SubTitle { 
   @(Model?.Id == null? "Create Author" : "Edit Author" ) 
}

<form asp-controller="Authors">
     <div class="card-body">
        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input type="text" class="form-control" asp-for="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
     </div>
   
    
    <button type="submit" class="btn rounded-pill text-white btnCreate" >
        @(Model?.Id == null ? "Create Author" : "Edit Author")

    </button>
</form>
