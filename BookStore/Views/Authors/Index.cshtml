@using BookStore.ViewModel
@model List<AuthorVM>
@section Title { Authors }
@section SubTitle { Show Authors }
@section Buttons {
    <a asp-controller="Authors" asp-action="Create" class="btn rounded-pill btn text-white btnCreate ">Create Author</a>
}
@if (!Model.Any())
{
    <div class="card-body">
        <div class="alert alert-warning alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            <h5><i class="icon fas fa-exclamation-triangle"></i> Alert!</h5>
            No Data Found
        </div>
    </div>
}
else
{
    <div class="card-body">
        <table class="table">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in @Model)
                {
                    <tr>
                        <td class="CategoryTableTD">@item.Id</td>
                        <td class="CategoryTableTD">@item.Name</td>
                        <td class="CategoryTableTD">
                            <a asp-controller="Authors" asp-action="Edit" asp-route-Id="@item.Id"
                               class="btn rounded-pill btn-sm text-white btnCreate">
                                Edit <i class="fas fa-edit"></i>
                            </a>
                            <a asp-controller="Authors" asp-action="Details" asp-route-Id="@item.Id"
                               class="btn rounded-pill btn-sm btn-success text-white">
                                Details <i class="fas fa-info-circle"></i>
                            </a>
                            <a asp-controller="Authors" asp-action="Delete" asp-route-Id="@item.Id"
                               class="btn btn-sm btn-danger rounded-pill text-white">
                                Delete <i class="fas fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}